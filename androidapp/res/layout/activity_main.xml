<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebe8d7" >

    <Button
        android:id="@+id/button1"
        android:layout_width="345dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/choosemap_btn"
        android:onClick="onClickToChooseMap" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="333dp"
        android:layout_height="333dp"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#ffffff" />

    <Button
        android:id="@+id/button2"
        android:layout_width="84dp"
        android:layout_height="44dp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="18dp"
        android:background="@drawable/startpoint_btn"
        android:onClick="SetStartPoint" />

    <Button
        android:id="@+id/button3"
        android:layout_width="84dp"
        android:layout_height="44dp"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/button2"
        android:background="@drawable/endpoint_btn"
        android:onClick="SetEndPoint" />

    <Button
        android:id="@+id/button4"
        android:layout_width="84dp"
        android:layout_height="44dp"
        android:layout_below="@+id/button2"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/button3"
        android:background="@drawable/seekroad_btn"
        android:onClick="FindPath" />

    <Button
        android:id="@+id/button5"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_alignRight="@+id/button3"
        android:layout_alignTop="@+id/button4"
        android:layout_marginRight="15dp"
        android:background="@drawable/start_btn"
        android:onClick="SendPath" />

    <Button
        android:id="@+id/button6"
        android:layout_width="136dp"
        android:layout_height="44dp"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignRight="@+id/imageView1"
        android:background="@drawable/saveroad_btn" 
        android:onClick="SavePath"/>

    <Button
        android:layout_width="136dp"
        android:layout_height="44dp"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignTop="@+id/button5"
        android:background="@drawable/chooseroad_btn" 
        android:onClick="ChooseSavedPath"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="155dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/directcontrol"
        android:onClick="onClickToMap" />

    <Button
        android:layout_width="155dp"
        android:layout_height="42dp"
        android:layout_alignBaseline="@+id/button7"
        android:layout_alignBottom="@+id/button7"
        android:layout_toRightOf="@+id/button5"
        android:background="@drawable/mapnavigator" />

</RelativeLayout>